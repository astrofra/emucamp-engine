<?xml version="1.0"?>
<data>
	<machine name="Atari ST" type="Computer">
		<description>
			<text><![CDATA[
			The Atari ST is a home computer released by Atari Corporation in June 1985. Development machines were distributed around May 1985 and it was available commercially from that summer into the early 1990s.
			]]></text>
			<source_url>http://en.wikipedia.org/wiki/Atari_ST</source_url>
		</description>

		<emulator name="Steem Engine">
			<description>
				<text><![CDATA[
				Steem is an open source Atari STE emulator for Windows and Linux. It runs almost every ST program ever made without any problems.
				The TOS Firmware (listed below) is required to run the emulator.
				]]></text>
				<source_url>http://steem.atari.st</source_url>
			</description>
			<platform name="TOS (Firmware)">
					<source_url start_with = "tos_" end_with = ".zip">http://steem.atari.st/download.htm</source_url>
			</platform>
			<platform name="Windows">
					<source_url start_with = "steem_v" end_with = ".zip">http://steem.atari.st/download.htm</source_url>
			</platform>
			<platform name="Windows SSE">
					<source_url start_with = "Steem" end_with = "Win32.zip">http://ataristeven.t15.org/Steem.htm</source_url>
			</platform>
			<platform name="Linux">
					<source_url start_with = "xsteem_v" end_with = ".tar.gz">http://steem.atari.st/download.htm</source_url>
			</platform>
		</emulator>
		
		<emulator name="SainT">
			<description>
				<text><![CDATA[
				SainT is a Windows based cycle accurate ATARI-ST emulator, written by James Boulton and Arnaud Carre.
				]]></text>
				<source_url>http://leonard.oxg.free.fr/SainT/saint.html</source_url>
			</description>
			<platform name="Windows">
					<source_url start_with = "SainT" end_with = ".zip">http://leonard.oxg.free.fr/SainT/saint.html</source_url>
			</platform>
		</emulator>

		<emulator name="Hatari">
			<description>
				<text><![CDATA[
				Hatari is an Atari ST/STE/TT/Falcon emulator for GNU/Linux, BSD, Mac OS X, Windows and other systems which are supported by the SDL library.
				]]></text>
				<source_url>http://hatari.tuxfamily.org/</source_url>
			</description>
			<platform name="EmuTOS (Firmware)">
					<source_url>http://sourceforge.net/projects/emutos/files/latest/download</source_url>
			</platform>
			<platform name="Windows">
					<source_url>http://download.tuxfamily.org/hatari/</source_url>
			</platform>
			<platform name="OS X">
					<source_url>http://download.tuxfamily.org/hatari/</source_url>
			</platform>
			<platform name="Linux">
					<source_url>http://download.tuxfamily.org/hatari/</source_url>
			</platform>
		</emulator>

		<emulator name="EstyJS">
			<description>
				<text><![CDATA[
				EstyJS is a javascript based emulator for the Atari ST. It was inspired by the succesfull release of the Acorn Electron emulator ElkJS. .
				]]></text>
				<source_url>http://estyjs.azurewebsites.net/</source_url>
			</description>
			<platform name="Javascript">
					<source_url>http://estyjs.azurewebsites.net/</source_url>
			</platform>
		</emulator>
		
	</machine>
</data>