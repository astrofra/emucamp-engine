<?xml version="1.0"?>
<data>
	<machine name="Nintendo GameBoy" type="Console" release_date="1989" discontinued="2003">
	
		<emulator name="Gambatte">
			<description>
				<text><![CDATA[
				Gambatte is a portable, open-source Game Boy Color emulator..
				]]></text>
				<source_url>http://gambatte.sourceforge.net/</source_url>
			</description>
			<platform name="Windows">
					<source_url>http://sourceforge.net/projects/gambatte/</source_url>
			</platform>
		</emulator>

		<emulator name="VisualBoyAdvance">
			<description>
				<text><![CDATA[
				VisualBoyAdvance (commonly abbreviated as VBA) is a free emulator of the Game Boy, Game Boy Color, and Game Boy Advance handheld game consoles as well as of Super Game Boy and Super Game Boy.
				]]></text>
				<source_url>http://sourceforge.net/projects/vba/</source_url>
			</description>
			<platform name="Windows">
					<source_url>http://sourceforge.net/projects/vba/</source_url>
			</platform>
		</emulator>

		<emulator name="BGB">
			<description>
				<text><![CDATA[
				BGB provides an accurate emulation of the GameBoy, GameBoy Color, and Super Gameboy, based on research with lots of test roms, useful for debugging/rom development.]]></text>
				<source_url>http://bgb.bircd.org</source_url>
			</description>
			<platform name="Windows">
					<source_url>http://bgb.bircd.org/bgb.zip</source_url>
			</platform>
		</emulator>

		<emulator name="KIGB">
			<description>
				<text><![CDATA[
				One of the most accurate emulators for Gameboy, Gameboy Color and Super Gameboy for Windows, Linux and OS X.]]></text>
				<source_url>http://kigb.emuunlim.com/</source_url>
			</description>
			<platform name="Windows">
					<source_url start_with="kigb_wi" end_with=".zip">http://kigb.emuunlim.com/downloads.htm</source_url>
			</platform>

			<platform name="Linux">
					<source_url start_with="kigb_li" end_with=".tar.gz">http://kigb.emuunlim.com/downloads.htm</source_url>
			</platform>

			<platform name="OS X">
					<source_url>http://www.bannister.org/cgi-bin/download.cgi?kigb</source_url>
			</platform>

		</emulator>

		<emulator name="GBA.js">
			<description>
				<text><![CDATA[
				Game Boy Advance in the Browser.<br>
				For legal reasons, GBA.js is presented without any included games. The emulation if fairly decent, though. Most games run and are playable.]]></text>
				<source_url>http://jpfau.github.io/gbajs/</source_url>
			</description>
			<platform name="Javascript">
					<source_url>http://jpfau.github.io/gbajs/</source_url>
			</platform>
		</emulator>

	</machine>
</data>